function get_config($config_id)
{
	global $db;

	$sql = 'SELECT config_value FROM ' . CONFIG_TABLE . ' WHERE config_name = "' . $config_id . '"';
	$result = $db->sql_query($sql);
	$config_value = $db->sql_fetchfield('config_value');
	$db->sql_freeresult($result);
	return($config_value);]]></action>
